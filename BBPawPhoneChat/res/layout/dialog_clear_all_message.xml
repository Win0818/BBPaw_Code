<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/is_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_clear_all_message_bg"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        >
        
      <Button 
          android:id="@+id/btn_dialog_clear_cancle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/selector_btn_cancle"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="20dp"
          />  
        
        <Button 
          android:id="@+id/btn_dialog_clear_comfirm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/selector_btn_sure"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="20dp"
          android:layout_toRightOf="@id/btn_dialog_clear_cancle"
          />  
    </RelativeLayout>

</RelativeLayout>
