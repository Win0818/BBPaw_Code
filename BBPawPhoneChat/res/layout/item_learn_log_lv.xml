<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
       <ImageView 
           android:id="@+id/iv_learn_apk_icon"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_gravity="center_vertical"
           />
       
    <TextView
        android:id="@+id/item_tv_learn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#6600cc"
        android:textSize="15sp"
        android:text="dddddd"
        android:layout_gravity="center_vertical"
        />
    
    </LinearLayout>
    
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        
            <TextView
                android:id="@+id/itme_tv_learn_time_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_time"
                android:textColor="@color/wangshuang_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_tv_learn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/action_settings"
                android:textColor="@color/wangshuang_color"
                android:textSize="15sp" />
        </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
          <TextView
                android:id="@+id/item_tv_learn_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp" 
                android:text="@string/learn_content"/>
          
           <TextView
                android:id="@+id/item_tv_learn_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#999999"
                android:textSize="15sp" 
                android:text="@string/learn_content"/>
          </LinearLayout>
</LinearLayout>