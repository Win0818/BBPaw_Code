<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_dialog_edit_user_name_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/et_dialog_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/username_edit_bg"
            android:layout_centerInParent="true" />
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_dialog_user_name"
            android:gravity="center_horizontal"
            android:layout_marginTop="90dp"
            >
        
            <Button
                android:id="@+id/btn_edit_name_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                />

            <Button
                android:id="@+id/btn_edit_name_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
               
                 />
         </LinearLayout>
    </RelativeLayout>
</LinearLayout>