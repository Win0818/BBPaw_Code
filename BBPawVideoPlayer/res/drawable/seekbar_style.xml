<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dip" />

            <gradient
                android:angle="270"
                android:centerColor="#38A910"
                android:centerY="1"
                android:endColor="#38A910"
                android:startColor="#38A910" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#FEED2F"
                    android:centerY="1"
                    android:endColor="#FEED2F"
                    android:startColor="#FEED2F" />
            </shape>
        </clip>
    </item>

</layer-list>