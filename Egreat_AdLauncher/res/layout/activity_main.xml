<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/main"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" >
    </ImageView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="908dp"
        android:layout_marginTop="20dp"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="13:05"
            android:textColor="@color/white"
            android:textSize="27dp" >
        </TextView>

        <ImageView
            android:id="@+id/icon_weather"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/cloudy" >
        </ImageView>

        <ImageView
            android:id="@+id/icon_wifi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_wifi_empty" >
        </ImageView>

        <ImageView
            android:id="@+id/icon_ethernet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_ethernet_disconnected" >
        </ImageView>

        <ImageView
            android:id="@+id/icon_usb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:scaleType="fitXY"
            android:src="@drawable/usb_icon"
            android:visibility="gone" >
        </ImageView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/button_1"
        android:layout_width="310dp"
        android:layout_height="360dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@+id/button_2" >

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_03" >
        </ImageView>
        
        <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/money_layout"
	        android:background="@drawable/money_total"
	        android:layout_gravity="bottom|center_horizontal"
	        android:layout_marginBottom="40dip">
	        
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/money_total"
		        android:textColor="#ffffff"
		        android:textSize="15sp"
		        android:layout_marginLeft="82dip"
		        android:layout_marginTop="6dp">
            </TextView>
            <LinearLayout android:layout_width="170dip"
		        android:layout_height="60dip"
		        android:layout_marginLeft="80dip"
		        android:gravity="center_horizontal"
		        android:layout_marginTop="16dip">
	            <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/txt_money_total"
			        android:text="0"
			        android:textColor="#ffffff"
			        android:singleLine="true"
			        android:maxLines="1"
			        android:textSize="42sp"
			        android:gravity="center"
			        android:layout_gravity="center">
	            </TextView>
	        </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@id/button_2"
        android:layout_width="420dp"
        android:layout_height="180dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_05" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_3"
        android:layout_width="420dp"
        android:layout_height="180dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="271dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/button_6" >

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_05" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_4"
        android:layout_width="310dp"
        android:layout_height="360dp"
        android:layout_marginLeft="850dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@id/button_2" >

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_03" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_5"
        android:layout_width="310dp"
        android:layout_height="160dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="451dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_14" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/button_6"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="451dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <RelativeLayout
            android:id="@+id/image_6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:background="@drawable/add"
            android:scaleType="fitXY" >

            <ImageView
                android:id="@+id/icon_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_icon" >
            </ImageView>

            <TextView
                android:id="@+id/title_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_6"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="添加"
                android:textSize="21sp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_7"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_marginLeft="640dp"
        android:layout_marginTop="451dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <RelativeLayout
            android:id="@+id/image_7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:background="@drawable/add"
            android:scaleType="fitXY" >

            <ImageView
                android:id="@+id/icon_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_icon" >
            </ImageView>

            <TextView
                android:id="@+id/title_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_7"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="添加"
                android:textSize="21sp" >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_8"
        android:layout_width="155dp"
        android:layout_height="160dp"
        android:layout_marginLeft="850dp"
        android:layout_marginTop="451dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/image_8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_18" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_9"
        android:layout_width="155dp"
        android:layout_height="160dp"
        android:layout_marginLeft="1005dp"
        android:layout_marginTop="451dp"
        android:background="@drawable/drawable_app_focus"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/image_9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/load_18" >
        </ImageView>
    </RelativeLayout>

    <com.egreat.adlauncher.util.ScrollTextView
        android:id="@+id/rolling_text"
        android:layout_width="1110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="622dp"
        android:gravity="center_vertical"
        android:textSize="33sp" >
    </com.egreat.adlauncher.util.ScrollTextView>

    <ImageView
        android:id="@+id/image_btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/jt_up" >
    </ImageView>
</RelativeLayout>