<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/birthday_pop_width"
    android:layout_height="@dimen/birthday_pop_height"
    android:background="@drawable/edit_phone_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:layout_weight="5"
            android:id="@+id/et_register_code_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit_bg"
            android:gravity="center"
            android:hint="@string/verification_code"
            android:inputType="number"
	        android:maxLength="8"
            android:textSize="@dimen/edit_pop_input_textSize" />
        
        <View 
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_send_code_id"
            android:layout_width="@dimen/register_send_code_width"
            android:layout_height="@dimen/register_send_code_height"
            android:background="@drawable/but_send_verification"
            android:textSize="@dimen/register_input_edit_textSize"
            android:contentDescription="@null" />
    </LinearLayout>

</RelativeLayout>