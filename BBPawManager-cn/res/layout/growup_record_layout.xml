<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/growup_record_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/growup_record_bg_cn">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" >

        <ListView
            android:id="@+id/growup_listview"
            android:layout_width="@dimen/growup_listview_width"
            android:layout_height="@dimen/growup_listview_heigth"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/growup_listview_marginBottom"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <View
            android:layout_width="@dimen/growup_vertical_line_width"
            android:layout_height="@dimen/growup_vertical_line_heigth"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dip"
            android:layout_marginLeft="@dimen/growup_vertical_line_marginLeft"
            android:background="@drawable/ic_vertical_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="20dip" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/growup_back_btn_marginLeft"
            android:background="@drawable/selector_back_btn" />
    </RelativeLayout>

</RelativeLayout>