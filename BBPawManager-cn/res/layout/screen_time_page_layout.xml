<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eyecare_page_bg"
    android:orientation="vertical"
    android:paddingLeft="40dip"
    android:paddingRight="40dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eyecare_screen_time_marginTop"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_time_page_title"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="@dimen/eyecare_title_textsize" />

        <com.worldchip.bbp.bbpawmanager.cn.view.SwitchButton
            android:id="@+id/screen_time_swicth_btn"
            android:layout_width="@dimen/eyecare_switchButton_width"
            android:layout_height="@dimen/eyecare_switchButton_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eyecare_seekbar_ll_marginTop"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_time_use_time"
            android:textColor="#000000"
            android:textSize="@dimen/eyecare_seekbar_title_textsize" />

        <com.worldchip.bbp.bbpawmanager.cn.view.CustomSeekBar
            android:id="@+id/use_time_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/eyecare_seekbar_height"
            android:paddingTop="5dip"
            android:paddingBottom="@dimen/eyecare_seekbar_paddingBottom" />
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_time_sleep_time"
            android:textColor="#000000"
            android:textSize="@dimen/eyecare_seekbar_title_textsize" />

         <com.worldchip.bbp.bbpawmanager.cn.view.CustomSeekBar
            android:id="@+id/time_sleep_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/eyecare_seekbar_height"
            android:paddingTop="5dip"
            android:paddingBottom="@dimen/eyecare_seekbar_paddingBottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screen_time_day_use_time"
            android:textColor="#000000"
            android:textSize="@dimen/eyecare_seekbar_title_textsize" />

         <com.worldchip.bbp.bbpawmanager.cn.view.CustomSeekBar
            android:id="@+id/time_day_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/eyecare_seekbar_height"
            android:paddingTop="5dip"
            android:paddingBottom="@dimen/eyecare_seekbar_paddingBottom"/>
    </LinearLayout>

</LinearLayout>