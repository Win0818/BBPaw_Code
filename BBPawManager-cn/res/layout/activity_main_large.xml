<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg_large" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/main_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/main_manage_selector_large"
                android:contentDescription="@string/str_null"
                android:scaleType="fitXY" >
            </ImageView>

            <TextView
                android:id="@+id/main_manage_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_tip_large"
                android:contentDescription="@string/str_null"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" >
            </TextView>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/main_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/main_information_selector_large"
                android:contentDescription="@string/str_null"
                android:scaleType="fitXY" >
            </ImageView>

            <TextView
                android:id="@+id/main_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dip"
                android:background="@drawable/ic_tip_large"
                android:contentDescription="@string/str_null"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" >
            </TextView>
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="180dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_settings_selector_large"
        android:contentDescription="@string/str_null"
        android:scaleType="fitXY" >
    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="20dip" >

        <ImageView
            android:id="@+id/main_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_back_btn"
            android:contentDescription="@null" />
    </RelativeLayout>

</RelativeLayout>