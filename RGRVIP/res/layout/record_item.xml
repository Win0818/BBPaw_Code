<RelativeLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="#00000000"
    	android:layout_gravity="center"
    	android:gravity="center"
    	android:descendantFocusability="blocksDescendants"
    	style="@style/NOFocusView" >
    	
	    <RelativeLayout
	        android:id="@+id/recordlayout"
	        android:layout_width="983dp"
	        android:layout_height="136dp"
	        android:gravity="center"
	        android:background="#00000000"
	        style="@style/FocusView" >
	    
		    <RelativeLayout 
		        android:id="@+id/rl_time_layout"
		        android:layout_width="101dp"
		        android:layout_height="136dp"
		        android:layout_centerVertical="true"
		        style="@style/NOFocusView">
		        
		        <TextView 
		            android:id="@+id/tv_year"
		            android:layout_width="match_parent"
		            android:layout_marginTop="15dp"
		            android:layout_height="36dp"
		            android:gravity="center|left|bottom"
		            android:paddingLeft="20dp"
		            android:textColor="#FFFFFF"
		            android:textSize="24sp"
					style="@style/NOFocusView" />
		        
		        <TextView 
		            android:id="@+id/tv_time"
		            android:layout_width="match_parent"
		            android:layout_height="40dp"
		            android:gravity="center|left"
		            android:paddingLeft="20dp"
		            android:layout_below="@+id/tv_year"
		            android:textColor="#FFFFFF"
		            android:textSize="30sp"
		            style="@style/NOFocusView" />
		        
		    </RelativeLayout>
		    
		    <ImageView
		        android:id="@+id/tv_image"
		        android:layout_width="83dp"
		        android:layout_height="93dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="15dp"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/rl_time_layout"
		        android:layout_gravity="center_vertical"
		        android:contentDescription="@null"
		        style="@style/NOFocusView" />
		    
		    <RelativeLayout 
		        android:id="@+id/rl_content"
		        android:layout_width="650dp"
		        android:layout_height="96dp"
		        android:layout_toRightOf="@+id/tv_image"
		        android:layout_centerVertical="true"
		        style="@style/NOFocusView" >
		        
		        <TextView 
		            android:id="@+id/tv_title"
		            android:layout_width="match_parent"
		            android:layout_height="48dp"
		            android:gravity="center|left"
		            android:textColor="#FFFFFF"
		            android:singleLine="true"
		            android:ellipsize="marquee" 
			        android:focusable="true" 
			        android:drawablePadding="3dp"
			        android:marqueeRepeatLimit="marquee_forever" 
			        android:focusableInTouchMode="true" 
			        android:scrollHorizontally="true"
		            android:textSize="32sp"
		            style="@style/NOFocusView" />
		        
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_below="@+id/tv_title"
		            android:gravity="center|right"
		            android:layout_height="48dp">
		            
		            <TextView 
			            android:id="@+id/tv_price_00"
			            android:layout_width="wrap_content"
			            android:layout_height="48dp"
			            android:gravity="center|right"
			            android:textColor="#FFFFFF"
			            android:textSize="32sp"
			            style="@style/NOFocusView" />
		            
		            <TextView 
			            android:id="@+id/tv_price_01"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center|right"
			            android:layout_toRightOf="@+id/tv_price_00"
			            android:textColor="#FFFFFF"
			            android:paddingRight="20dp"
			            android:drawablePadding="3dp"
			            android:textSize="32sp"
			            style="@style/NOFocusView" />
		            
		        </RelativeLayout>
		    </RelativeLayout>
		    
		    <TextView 
		        android:layout_width="109dp"
		        android:layout_height="119dp"
		        android:layout_gravity="center_vertical|right"
		        android:gravity="center"
		        android:textColor="#FFFFFF"
		        android:layout_marginRight="9dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_toRightOf="@+id/rl_content"
		        android:textSize="30sp"
		        android:id="@+id/tv_state"
		        style="@style/NOFocusView" />
	    </RelativeLayout>
</RelativeLayout>