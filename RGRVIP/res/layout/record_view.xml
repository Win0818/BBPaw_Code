<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	 	xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#00000000">
    
    <RelativeLayout 
        android:id="@+id/rl_record_layout"
        android:layout_width="1070dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:background="#00000000" >
    
   		<TextView 
   		    android:id="@+id/tv_message"
	        android:layout_width="720dp"
	        android:layout_height="match_parent"
	        android:textSize="30sp"
	        android:layout_marginLeft="45dp"
	        android:gravity="center|left"
	        android:text="@string/messge_four"
	        android:textColor="#FFFFFF" />
   		
   		<TextView 
   		    android:id="@+id/tv_page"
	        android:layout_width="220dp"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@+id/tv_message"
	        android:textSize="30sp"
	        android:gravity="center|right"
	        android:textColor="#FFFFFF" />
            
   	</RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="1070dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_below="@+id/rl_record_layout" >
   		
        <ListView 
		    android:id="@+id/recordlist"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="35dp"
		    android:paddingRight="35dp"
		    android:nextFocusUp="@+id/recordlist"
		    android:nextFocusDown="@+id/recordlist"
		    android:nextFocusLeft="@+id/fl_menu_03"
		    android:nextFocusRight="@+id/recordlist"
		    android:scrollbars="none"
		    android:listSelector="#00000000"
		    android:divider="#00000000" />
        
    </RelativeLayout>
</RelativeLayout>