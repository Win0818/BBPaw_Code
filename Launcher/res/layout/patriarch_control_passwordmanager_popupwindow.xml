<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="585dp"
    android:layout_height="545dp"
    android:layout_gravity="center"
    android:background="@drawable/parentalcontrol_password_setting_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp" >

    <LinearLayout
        android:layout_width="419dp"
        android:layout_height="69dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/parentalcontrol_password_edittext_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/change_manager_password"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="419dp"
        android:layout_height="69dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/parentalcontrol_password_edittext_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/default_password"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/update_manager_password"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/manager_confirm"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_gravity="center|right"
         android:soundEffectsEnabled="false"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/passlock_confirm_style"
        android:gravity="center" />

</LinearLayout>