<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
           
    <RelativeLayout
        android:layout_width="@dimen/register_dialog_width"
        android:layout_height="@dimen/register_dialog_height"
        android:background="@drawable/forgetpassword_bg" >
              <TextView android:id="@+id/forgetpsw_textivew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/baise"
                android:text="@string/forget_passwrod"
                android:textSize="42sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

         
                <EditText
                    android:id="@+id/find_psw_account_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/forget_psw_bg"
                    android:hint="@string/login_account_hint_text"
                    android:inputType="textNoSuggestions"
                    android:maxWidth="@dimen/login_edit_max_width"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:singleLine="true"
                    android:textColorHint="#EFEBEB"
                    android:textSize="28sp" />
      

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/validate_code_et"
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chinese_edittext_bg"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/validate_code_hint_text"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:singleLine="true"
                    android:textColorHint="#EFEBEB"
                    android:textSize="28sp"                    />
                
                <Button
                    android:id="@+id/validate_code_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:background="@drawable/ic_validate_code_btn_cn"
                    android:textColor="#0099FF"
                    android:textSize="34sp"
                    android:contentDescription="@null"
                    android:soundEffectsEnabled="false" />
             
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/forget_canle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/canlce_selector_cn"
                    android:contentDescription="@null"
                    android:soundEffectsEnabled="false" />

                <ImageView
                    android:id="@+id/forget_comfrim_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/confrim_button_selector_cn"
                    android:contentDescription="@null"
                    android:soundEffectsEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>