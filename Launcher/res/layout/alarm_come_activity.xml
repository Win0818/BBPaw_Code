    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alarmpopwindow_bg"
        android:orientation="horizontal" >

       

        <ImageView
            android:id="@+id/iv_hour1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="276dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/clock_number_0" />

        <ImageView
            android:id="@+id/iv_hour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@drawable/clock_number_0" />

        <ImageView
            android:id="@+id/clock_maohao_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/clock_maohao" />

        <ImageView
            android:id="@+id/iv_minute1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/clock_number_0" />

        <ImageView
            android:id="@+id/iv_minute2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/clock_number_0" />

        <ImageButton
            android:id="@+id/imgbtn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="155dp"
            android:background="@drawable/alarm_come_cancel"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

</RelativeLayout>