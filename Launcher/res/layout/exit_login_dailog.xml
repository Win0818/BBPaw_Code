<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="@dimen/register_dialog_width"
        android:layout_height="@dimen/register_dialog_height"
        android:background="@drawable/forgetpassword_bg" >

        <ImageView
            android:id="@+id/bb_cancels_extit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baby_edite_cancle"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_title_text"
                android:textColor="@color/baise"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/login_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxWidth="500dip"
                android:singleLine="true"
                android:textColor="#0099FF"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="70dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/change_psw_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_change_psw_btn_cn"
                    android:contentDescription="@null"
                    android:soundEffectsEnabled="false" />

                <ImageView
                    android:id="@+id/login_out_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dip"
                    android:background="@drawable/ic_exit_btn_cn"
                    android:contentDescription="@null"
                    android:soundEffectsEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>