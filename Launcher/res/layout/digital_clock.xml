<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/digitalclock_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/digital_clock_daytime"
    android:baselineAligned="false" >

    <com.worldchip.bbp.ect.view.DigitalClock
        android:id="@+id/customdigitalclock"
        android:layout_width="@dimen/digitalclock_width"
        android:layout_height="111dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/DigitalClock_top"
        android:orientation="horizontal" />

</RelativeLayout>