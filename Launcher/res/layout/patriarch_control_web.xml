<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/relayout_gagdeg_width"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_add_info"
        android:layout_width="@dimen/relayout_gagdeg_width"
        android:layout_height="@dimen/patriacrch_control_web_ll_add_info_height"
        android:layout_marginTop="@dimen/patriacrch_control_we_bll_add_info_top"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/home_set_up_web_name"
            android:gravity="center"
            android:hint="@string/titil_web"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/home_set_up_web_url"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="@dimen/patriacrch_control_btn_add_height"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/parentalcontrol_add_btn"
            android:gravity="center"
            android:soundEffectsEnabled="false"
            android:text="@string/add_web"
            android:textColor="#000000"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/parentalcontrol_web_bule_bg_top"
        android:background="@drawable/parentalcontrol_web_bule_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_bbpaw"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/parentalcontrol_btn_bbpaw_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_set_up_web_url"
            android:gravity="center"
            android:soundEffectsEnabled="false"
            android:text="@string/bbpaw_web_home_page"
            android:textColor="#000000"
            android:textSize="40sp" />

        <ListView
            android:id="@+id/lv_url_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:divider="@null" />
    </LinearLayout>

</LinearLayout>