            android:background="@drawable/clock_text_select_style"
            android:drawableLeft="@drawable/clock_item_add"
            android:drawablePadding="15dp"
            android:gravity="center|left"
            android:paddingLeft="30dp"
            android:textColor="#38a910"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/clock_alarm_del_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="85dp"
            android:contentDescription="@null"
            android:padding="20dp"
            android:soundEffectsEnabled="false"
            android:src="@drawable/clock_alarm_del"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clock_layout_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clock_layout_02"
        android:layout_marginLeft="@dimen/clock_layout_00_left"
        android:layout_marginTop="15dp"
        android:background="#00000000"
        android:baselineAligned="false" >

        <CheckBox
            android:id="@+id/clcok_alarm_use_03"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/clock_use"
            android:button="@null"
            android:soundEffectsEnabled="false" />

        <TextView
            android:id="@+id/clock_alarm_time_03"
          android:layout_width="@dimen/clock_alarm_time_00_width"
            android:layout_height="@dimen/clock_alarm_time_00_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="96dp"
            android:background="@drawable/clock_text_select_style"
            android:drawableLeft="@drawable/clock_item_add"
            android:drawablePadding="15dp"
            android:gravity="center|left"
            android:paddingLeft="30dp"
            android:textColor="#38a910"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/clock_alarm_del_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
