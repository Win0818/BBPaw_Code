<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:background="#00000000" >
    
    <TextView 
        android:id="@+id/tv_payment_method"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="#000000"
        android:gravity="center|left"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="26sp"
        style="@style/NoFocusableStyle"
        android:text="@string/payment_method" />
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">
        
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            
            <ImageView android:id="@+id/img_payment_integral"
                android:src="@drawable/pay_integral"
                android:layout_width="167dp"
                android:layout_height="157dp"
                android:padding="10dp"
                style="@style/FocusableStyle"
                android:layout_centerHorizontal="true"
                android:background="@drawable/payment_selector_style"/>
             <TextView 
		        android:id="@+id/tv_payment_integral"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="30sp"
		        android:textColor="#333333"
		        android:gravity="center_horizontal"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@+id/img_payment_integral"
		        android:text="@string/payment_method_jifen"/>
        </RelativeLayout>
	    
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:gravity="center_horizontal"
            >
            
            <ImageView android:id="@+id/img_payment_weixin"
                android:src="@drawable/pay_weixin"
                android:layout_width="167dp"
                android:layout_height="157dp"
                android:padding="10dp"
                style="@style/FocusableStyle"  
                android:layout_centerHorizontal="true"
                android:background="@drawable/payment_selector_style"/>
            <TextView 
		        android:id="@+id/tv_payment_weixin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="30sp"
		        android:textColor="#333333"
		        android:gravity="center_horizontal"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@+id/img_payment_weixin"
		        android:text="@string/payment_method_weixin"/>
        </RelativeLayout>
    </LinearLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00000000"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true" >
        
        <TextView
            android:id="@+id/tv_remarks_03"
            android:layout_width="560dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="invisible"
            android:layout_marginLeft="30dp"
            android:singleLine="true" />
        
    </RelativeLayout>
</RelativeLayout>