<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >
    
    <RelativeLayout
        android:layout_width="551dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#00000000" >
        
        <TextView 
            android:id="@+id/tv_confirm_message"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_marginTop="30dp"
            android:textSize="32sp"
            android:paddingLeft="40dp"
            android:text="@string/user_info_tip11"/>
        
        <RelativeLayout
            android:id="@+id/rl_tip_name_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_confirm_message"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_name_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_name_00"/>
            
            <TextView 
                android:id="@+id/tv_real_name"
                android:layout_toRightOf="@+id/tv_tip_name_00"
                style="@style/TextViewStyle4"
                android:text="芒果乐"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/el_tip_phone_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_tip_name_00"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_phone_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_phone_00"/>
            
            <TextView 
                android:id="@+id/tv_contact_phone"
                android:layout_toRightOf="@+id/tv_tip_phone_00"
                style="@style/TextViewStyle4"
                android:text="183-8254-1233"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_tip_phone2_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/el_tip_phone_00"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_phone2_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_phone2"/>
            
            <TextView 
                android:id="@+id/tv_common_telephone"
                android:layout_toRightOf="@+id/tv_tip_phone2_00"
                style="@style/TextViewStyle4"
                android:text="0755-82332323" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_tip_address_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_tip_phone2_00"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_address_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_address"/>
            
            <TextView 
                android:id="@+id/tv_street_address"
                android:layout_toRightOf="@+id/tv_tip_address_00"
                style="@style/TextViewStyle4"
                android:singleLine="true"
                android:text="深圳宝安区"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_tip_home_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_tip_address_00"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_home_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_home"/>
            
            <TextView 
                android:id="@+id/tv_cell_name"
                android:layout_toRightOf="@+id/tv_tip_home_00"
                style="@style/TextViewStyle4"
                android:singleLine="true"
                android:text="永丰社区"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_tip_home_part_00"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_tip_home_00"
            android:background="#00000000">
            
            <TextView 
                android:id="@+id/tv_tip_home_part_00"
                style="@style/TextViewStyle3"
                android:text="@string/tip_home_part"/>
            
            <TextView 
                android:id="@+id/tv_corridor_unit"
                android:layout_toRightOf="@+id/tv_tip_home_part_00"
                style="@style/TextViewStyle4"
                android:singleLine="true"
                android:text="6-57"/>
            
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/tv_change_receiving_address"
            android:layout_width="251dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/rl_tip_home_part_00"
            android:gravity="center"
            style="@style/FocusableStyle"
            android:text="@string/change_receiving_address"
            android:background="@drawable/butt_bg_style"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/bg_blue">
        
        <ImageView 
            android:id="@+id/img_commodity_src"
            android:layout_width="251dp"
            android:layout_height="268dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading"/>
        
        <TextView 
            android:id="@+id/tv_commodity_name"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:singleLine="true"
            android:ellipsize="marquee" 
	        android:focusable="true" 
	        android:marqueeRepeatLimit="marquee_forever" 
	        android:focusableInTouchMode="true" 
	        android:scrollHorizontally="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_commodity_src"
            android:gravity="center|left"
            android:text="美国进口开心果"/>
        
        <TextView 
            android:id="@+id/tv_commodity_count"
            android:layout_width="251dp"
            android:layout_height="48dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_commodity_name"
            android:gravity="center|left"
            android:text="兑换数量：10"/>
        
        <TextView 
            android:id="@+id/tv_commodity_money"
            android:layout_width="251dp"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_commodity_count"
            android:gravity="center|left"
            android:text="合计：37500 乐币"/>
        
        <TextView 
            android:id="@+id/tv_confirmation_exchange"
            android:layout_width="251dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_commodity_money"
            android:gravity="center"
            style="@style/FocusableStyle"
            android:text="@string/confirmation_exchange"
            android:background="@drawable/butt_bg_style"/>
    </RelativeLayout>
</RelativeLayout>